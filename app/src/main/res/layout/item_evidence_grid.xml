<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="160dp"
    android:layout_margin="4dp">

    <ImageView
        android:id="@+id/img"
        android:scaleType="centerCrop"
        android:background="#222"
        android:layout_width="match_parent" android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/caption"
        android:background="#80000000"
        android:textColor="#fff"
        android:textSize="12sp"
        android:padding="4dp"
        android:layout_gravity="bottom"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_gravity="top|end" android:padding="4dp">
        <Button android:id="@+id/btnOpen" android:text="Open"/>
        <Space android:layout_width="6dp" android:layout_height="0dp"/>
        <Button android:id="@+id/btnShare" android:text="Share"/>
    </LinearLayout>
</FrameLayout>


