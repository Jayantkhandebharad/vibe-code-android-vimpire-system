<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingBottom="12dp"
    android:paddingTop="4dp"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/home_gradient_background">

    <TextView android:id="@+id/lblLevel" android:text="Level 1"
        android:textStyle="bold" android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <ProgressBar
        android:id="@+id/xpBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent" android:layout_height="10dp"
        android:layout_marginTop="8dp" android:max="100"/>

    <TextView android:id="@+id/xpText" android:text="0 / 100 XP"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginTop="4dp"/>

    <TextView android:id="@+id/counts"
        android:text="0 pending â€¢ 0 done"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginTop="12dp"/>

    <Button android:id="@+id/btnRefresh"
        android:text="Refresh"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginTop="12dp"/>

    <Button
        android:id="@+id/btnRoadmap"
        android:text="View Roadmap"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginTop="12dp"/>

</LinearLayout>