<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.vampire_system.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.vampire_system.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.vampire_system.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_history"
        android:name="com.example.vampire_system.ui.history.HistoryFragment"
        android:label="History" />
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.vampire_system.ui.profile.ProfileFragment"
        android:label="Profile" />
    <fragment
        android:id="@+id/navigation_backup_settings"
        android:name="com.example.vampire_system.features.backup.BackupSettingsFragment"
        android:label="Backup" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.vampire_system.ui.settings.SettingsFragment"
        android:label="Settings" />
    <fragment
        android:id="@+id/navigation_admin"
        android:name="com.example.vampire_system.ui.admin.AdminFragment"
        android:label="Admin Studio" />

    <fragment
        android:id="@+id/navigation_gallery"
        android:name="com.example.vampire_system.features.evidence.GalleryFragment"
        android:label="Evidence" >
        <argument android:name="qi" android:defaultValue="" app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/navigation_roadmap"
        android:name="com.example.vampire_system.ui.roadmap.RoadmapFragment"
        android:label="Roadmap" />

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.vampire_system.ui.search.SearchFragment"
        android:label="Search" />

    <fragment
        android:id="@+id/navigation_evidence"
        android:name="com.example.vampire_system.ui.evidence.EvidenceFragment"
        android:label="Evidence Library" />
</navigation>